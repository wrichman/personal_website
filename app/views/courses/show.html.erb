          <% @lessons.each do |lesson| %>

          <div id="item-<%= lesson.title %>-<%= lesson.id %>" class="item-wrap">

            <div class="content-wrapper">
              <h1><%= link_to "#{lesson.title}", course_lesson_path(@course, lesson) %></h1>
            </div>
          </div>

            <% if lesson.exercises[0] != nil %>
              <% lesson.exercises.each do |exercise| %>
                <div id="item-<%= exercise.title %>-<%= exercise.id %>" class="item-wrap">
                <%#= exercise.complete?(current_user).inspect %>



            <% if exercise.complete?(current_user) %>
              <%= form_for(current_user.completeds.find_by(exercise_id: exercise.id), html: { method: :delete }) do |f| %>
                <%= f.submit "Uncomplete Exercise", class: "btn btn-primary", style: "font-weight:bolder;width:152px;margin-bottom:20px" %>
              <% end %>
            <% else %>
              <%= form_for(current_user.completeds.build(user_id: current_user.id, exercise_id: exercise.id)) do |f| %>
                <div><%= f.hidden_field :user_id %></div>
                <div><%= f.hidden_field :exercise_id %></div>
                <%= f.submit "Complete Exercise", class: "btn btn-primary", style: "font-weight:bolder;width:152px;margin-bottom:20px;background:lightgreen" %>
              <% end %>
            <% end %>


