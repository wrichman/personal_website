<div class="row">


<% color_ids = ["bg-r2","bg-y2", "bg-b2", "bg-gg2", "bg-g2", "bg-purple2", "bg-brown2", "bg-b2"] %>
<% color_backgrounds = ["#1ABC9C", "#34495E", "#F1C40F", "#3498DB", "#E74C3C", "#ECF0F1", "#2ECC71"] %>
<% dark_color_backgrounds = ["#16A085", "#2C3E50", "#F39C12", "#2980B9", "#C0392B", "#BDC3C7", "#27AE60"] %>
<% count = 0  %>

<% @courses.each do |course| %>  

 <!-- New Block -->
  <div class="col-md-6">
    <div class="section-block" style="background-color:<%= color_backgrounds[count] %>">
      <header>
        <!-- <div class="icon ss-lightbulb"></div> -->
        
        <%#= image_tag course.image, style: "height:30px;width:30px;margin:-13px 5px 0 5px" %>
        <h2 id="#" style="display:inline"><a href="<%= course_path(course) %>"><%= course.title %></a></h2> by <%= link_to course.creator.full_name, user_path(course.creator) %>
         <%= link_to "Edit Course", edit_course_path(course) %>
      </header>
      <p>
        <%= course.description %>
      </p>

      <div class="children">
        <ul>

          <% course.lessons.each do |lesson| %>
            <a href="http://www.dess-e.com/ladies-learning-ruby#1"><li style="background:<%= dark_color_backgrounds[count] %>"> <%= lesson.title %></li></a>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <% count += 1 %>
<% end %>
</div>


