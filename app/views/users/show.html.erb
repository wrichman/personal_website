  <div class="container">

      <div class="row">

        <div class="col-lg-12">
          <h1 class="page-header"><%= @user.first_name %> <%= @user.last_name %> <small><%= @user.description %></small></h1>
          
          
        
        </div>

      </div>

      <div class="row">

        <% @user.courses.each do |course| %>
          <div class="col-md-4 portfolio-item">
            <a href="<%= course_path(course) %>"><img class="img-responsive" src="<%= course.image %>" style="width:200px;height:200px"></a>
            <h3><a href="<%= course_path(course) %>"><%= course.title %></a></h3>
            <p><%= course.description %></p>
          </div>
        <% end %>

      </div>

      <hr>

    </div>