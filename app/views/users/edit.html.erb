<div class="row">
   <div class="col col-lg-5 col-offset-3"><h2>Edit Your Profile</h2>
    <%= form_for @user do |f| %>
      <%= render 'shared/form_errors', :f => f %>
      <%= render 'form', :f => f %>
      <div class="form-actions">
        <%= f.submit 'Edit Profile', class: 'btn btn-primary btn-large', style: "font-weight:bolder; width:100%;margin-top:20px" %>
      </div>
    <% end %>
  </div>
</div>

