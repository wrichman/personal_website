<div class="row">

  <div class="col-lg-12">
    <h1 class="page-header">Curators</h1>
  </div>

</div>

<div class="row">

  <% @users.each do |user| %>
    <div class="col-lg-4 col-sm-6">
      <img class="img-circle img-responsive" style="height:200px;width:200px" src="<%= user.image %>">
        <h3><%= user.first_name %> <%= user.last_name %> <small><%= user.description %></small></h3>
        <p>What does this team member to? Keep it short! This is also a great spot for social links!</p>
        <% user.courses.each do |course| %>
          <a class="btn btn-primary" href="<%= course_path(course) %>"><%= course.title %> <span class="glyphicon glyphicon-chevron-right"></span></a>
        <% end %>
    </div>
  <% end %>
  
</div>