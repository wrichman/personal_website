 <div class="author-wrap">

            <div class="name">

              <div class="img-wrap">
                <a href="<%= user_path(current_user) %>">
                  <img alt="Thumb large" class="user-pic" src="<%= current_user.image %>" />
                </a>
                <div style="clear:both"></div>
              </div>

              <span class="name-full">
                <a href="<%= user_path(current_user) %>">
                  <%= @course.creator.first_name %> <%= @course.creator.last_name %>
                </a>
              </span>
              
              <div class="mini-bio">
                <%= @course.creator.description %>
              </div>
              
            </div>

            <div class="alert alert-warning sub-wrapper">
              <p>
                <strong>
                    Learn everything about AngularJS.
                </strong>
              </p>
              <p style="font-size:12px">
                There's more coming - enter your email and stay in the loop!
              </p>
            </div>

            <div class="share-box">
              <a href="<%= @course.creator.twitter_profile %>" class="" target="_blank">
                <i class="wic-twitter"></i> Tweet this
              </a>

              <a href="<%= @course.creator.facebook_profile %>">
                <i class="wic-facebook-squared"></i>Share on Facebook
              </a>
            </div>

            <div class="clear-all"></div>

          </div>