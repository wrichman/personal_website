<h1>Lesson for <%= @course.title %></h1>

<%= form_for [@user, @course, @lesson] do |f| %>
  
  <%= render 'shared/form_errors', :f => f %>
  
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <div class="form-actions">
    <%= f.submit 'Pledge Now', :class => 'btn' %>
  </div>

<% end %>